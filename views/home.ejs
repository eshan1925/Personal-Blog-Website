<%- include("partials/header") -%>
<h1>Home</h1>
<p><%= startingContent %></p>
<% posts.forEach(post => { %>
    <h1><%= post.title %></h1>
    <% var _id = post._id %> 
    <% var fullContent = post.content %>
    <% var truncatedString = fullContent.substring(0,100)+"..."%>
    <% var readLink = "/posts/"+_id %>   
    <p><%= truncatedString %> <a href="<%= readLink %>">Read More</a> </p>
    <% }); %>
<%- include("partials/footer") -%>
